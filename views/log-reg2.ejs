<% if(!(currentUser)) { %>
    <ul class="navbar-nav ml-auto">
        <li class="nav-item mr-3">
            <a class="nav-link" style="cursor: pointer;" data-toggle="modal" data-target="#exampleModalCenter">Log In</a>
        </li>    
        <li class="nav-item mr-3">
            <a class="nav-link" style="cursor: pointer;" data-toggle="modal" data-target="#exampleModalCenter1">Register</a>
        </li>    
    </ul>
<% }else { %>
    <ul class="navbar-nav ml-auto">   
        <li class="nav-item mr-3">
            <div class="btn-group">
                <button type="button" style="font-weight: 700;" class="btn btn-light text-primary rounded-circle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <%= currentUser.username[0].toUpperCase() %>
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <h5 class="text-center">Hi <%= currentUser.username %>!!!</h5>
                    <hr>
                    <form action="/logout" method="POST" class="d-flex justify-content-center">
                        <button class="btn btn-danger">Log Out</button>
                    </form>
                </div>
            </div>
        </li>
    </ul>
<% } %>
</ul>
</div>
</nav>
